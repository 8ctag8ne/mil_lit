@model MIL_LIT.Book

<h4>Book</h4>
<hr />
<div class="row wr">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CreatedBy" class="control-label"></label>
                <select asp-for="CreatedBy" class ="form-control" asp-items="ViewBag.CreatedBy"></select>
            </div>
            <div class="form-group">
                <label asp-for="SourceLink" class="control-label"></label>
                <input asp-for="SourceLink" class="form-control" />
                <span asp-validation-for="SourceLink" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Filepath" class="control-label"></label>
                <input asp-for="Filepath" class="form-control" />
                <span asp-validation-for="Filepath" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GeneralInfo" class="control-label"></label>
                <input asp-for="GeneralInfo" class="form-control" />
                <span asp-validation-for="GeneralInfo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Author" class="control-label"></label>
                <input asp-for="Author" class="form-control" />
                <span asp-validation-for="Author" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CoverLink" class="control-label"></label>
                <input asp-for="CoverLink" class="form-control" />
                <span asp-validation-for="CoverLink" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="TagIds" class="control-label">Категорії</label>
                <select asp-for="TagIds" class ="form-control" asp-items="ViewBag.AllTags" multiple="multiple"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary mt-3" />
            </div>
            

        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>