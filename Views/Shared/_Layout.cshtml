@using Microsoft.AspNetCore.Identity
@inject SignInManager<User> _signInManager
@inject UserManager<User> _userManager

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MIL_LIT</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MIL_LIT.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" asp-append-version="true"/>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow mb-3 wr">
            <div class="container-fluid">
                <a class="navbar-brand text-light a-title" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src=~/resources/WhiteLogo.png class="image-fit" style="max-height: 50px;"/>
                    <!--MIL_LIT-->

                </a>
                <button class="navbar-toggler btn-outline-light" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item a-title">
                            <b>
                                <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Index">Про нас</a>
                            </b>
                        </li>
                        <li class="nav-item a-title">
                            <b>
                                <a class="nav-link text-light" asp-area="" asp-controller="Book" asp-action="Index">Книги</a>
                            </b>
                        </li>
                        <li class="nav-item a-title">
                            <b>
                                <a class="nav-link text-light" asp-area="" asp-controller="Tag" asp-action="Index">Категорії</a>
                            </b>
                        </li>
                        @if(User.IsInRole("admin"))
                        {
                            <li class="nav-item a-title">
                                <b>
                                    <a class="nav-link text-light" asp-area="" asp-controller="User" asp-action="Index">Користувачі</a>
                                </b>
                            </li>
                            <li class="nav-item a-title">
                                <b>
                                    <a class="nav-link text-light" asp-area="" asp-controller="Roles" asp-action="Index">Ролі</a>
                                </b>
                            </li>
                        }
                        <li class="nav-item a-title">
                            <b>
                                <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Privacy">Корисна інформація</a>
                            </b>
                        </li>
                    </ul>
                    @if(User.Identity.IsAuthenticated)
                    {
                        <ul class="navbar-nav">
                            <li class="nav-item a-title">
                                <b>
                                    <a class="nav-link text-light" asp-controller="User" asp-action="Details" 
                                    asp-route-id="@_userManager.GetUserId(User)">
                                        Мій профіль
                                    </a>
                                </b>
                            </li>
                            <li class="nav-item a-title">
                                <form method="post" asp-controller="Account" asp-action="Logout">
                                    <b>
                                        <input type="submit" value="Вихід" class="btn btn-outline-light" style="font-weight:bold;"/>
                                    </b>
                                </form>
                            </li>
                        </ul>
                    }
                    else
                    {
                        <ul class="navbar-nav">
                            <li class="nav-item a-title">
                                <b>
                                    <a class="nav-link text-light" asp-controller="Account" asp-action="Login">Увійти</a>
                                </b>
                            </li>
                            <li class="nav-item a-title">
                                <b>
                                    <a class="nav-link text-light" asp-controller="Account" asp-action="Register">Зареєструватися</a>
                                </b>
                            </li>
                        </ul>
                    }

                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - MIL_LIT - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
