@model MIL_LIT.Tag

<h4 class="wr">Редагувати дані про категорію</h4>
<hr />
<div class="row wr">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="TagId" />
            <div class="form-group mb-2">
                <label asp-for="Name" class="control-label">Назва категорії</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group mb-2">
                <label asp-for="CreatedBy" class="control-label">Створено користувачем</label>
                <select asp-for="CreatedBy" class="form-control" asp-items="ViewBag.CreatedBy"></select>
                <span asp-validation-for="CreatedBy" class="text-danger"></span>
            </div>
            <div class="form-group mb-2">
                <label asp-for="CoverFile" for="formFile" class="form-label">Нова обкладинка</label>
                <input asp-for="CoverFile" class="form-control" type="file" id="formFile" accept="image/*">
                <span asp-validation-for="CoverFile" class="text-danger"></span>
            </div>
            <div class="form-group mb-2">
                <input asp-for="CoverImage" class="form-control" type="hidden"/>
                <span asp-validation-for="CoverImage" class="text-danger"></span>
            </div>
            <div class="form-group mb-2">
                <input asp-for="CreatedAt" class="form-control" type="hidden"/>
            </div>
            <div class="form-group mb-2">
                <label asp-for="ParentTagId" class="control-label">Належить до категорії</label>
                <select asp-for="ParentTagId" class="form-control" asp-items="ViewBag.ParentTagId"></select>
                <span asp-validation-for="ParentTagId" class="text-danger"></span>
            </div>
            <div class="form-group mb-2">
                <input type="submit" value="Зберегти" class="btn btn-outline-success me-3 my-3" />
                <a asp-action="Index" class="btn btn-outline-secondary my-3">Повернутися</a>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

