@model MIL_LIT.User

<div>
    <h4> @Html.DisplayFor(model => model.Login)</h4>
    <hr />
    <dl class="row wr">
        @if(@Model.IsAdmin)
        {
            <p>
                <dd class = "col-sm-2">
                    Адміністратор
                </dd>
            </p>
        } else
        {
            <p>
                <dd class = "col-sm-2">
                    Користувач
                </dd>
            </p>
        }
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CreatedAt)
        </dt>
        <dd class = "col-sm-10">
